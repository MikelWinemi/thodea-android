<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#000"/> <!-- change color as needed -->
        </shape>
    </item>

    <!-- Foreground image (your logo) -->
    <item
        android:left="14dp"
        android:right="14dp"
        android:top="14dp"
        android:bottom="14dp">
        <bitmap
            android:src="@drawable/ic_logo"
            android:gravity="center"/>
    </item>
</layer-list>